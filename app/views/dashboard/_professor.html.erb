<div class="row">
  <div class="courses-container col-sm-12 col-sm-offset-0">
    <!-- Add a div row that verticially centers the <p> and <div> containers -->
    <p class="col-sm-2" align="center" id="courses-title"><strong>Your courses</strong></p>

    <div class="col-sm-2 col-sm-offset-6" id="courses-create">
      <%= link_to "Manage courses", root_path, class: "btn", style: "margin-bottom: 1vh;" %>
    </div>

    <div class="col-sm-2" id="courses-create">
      <%= link_to "Create new course", new_course_path, class: "btn", style: "margin-bottom: 1vh;" %>
    </div>
  </div>
</div>

<!-- Fix the img icon -->
<ul class="collection">
  <% if @courses.empty? %>
    You have no courses! Click 'Create new course' to get started.
  <% else %>
    <% @courses.each do |course| %>
      <li class="collection-item avatar">
        <!-- <img src="someimg.png" alt="" class="circle"> -->
        <span class="title" style="font-size: 1.5em;"><strong><%= course.course_code + ' | ' + course.title %></strong></span>
        <p style="font-size: 1em;"><i><%= course.description %></i><br>
          <%= link_to "View Course", course_path(course.id), class:"collection-item" %>
        </p>
        <a href="#!" class="secondary-content"><i class="material-icons">settings</i></a>
      </li>
    <% end %>
  <% end %>
</ul>
